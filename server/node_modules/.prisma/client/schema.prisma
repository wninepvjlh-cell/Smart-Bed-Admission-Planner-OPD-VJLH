generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Role {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  users       User[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model User {
  id                 Int                     @id @default(autoincrement())
  username           String                  @unique
  passwordHash       String
  displayName        String
  roleId             Int
  role               Role                    @relation(fields: [roleId], references: [id])
  isActive           Boolean                 @default(true)
  lastLoginAt        DateTime?
  refreshTokens      RefreshToken[]
  patientsCreated    Patient[]               @relation("PatientCreatedBy")
  bookingsRequested  Booking[]               @relation("BookingRequestedBy")
  bookingsAssigned   Booking[]               @relation("BookingAssignedTo")
  bookingStatusEdits BookingStatusHistory[]  @relation("BookingStatusChangedBy")
  bedSnapshots       BedSnapshot[]           @relation("BedSnapshotRecordedBy")
  auditLogs          AuditLog[]
  createdAt          DateTime                @default(now())
  updatedAt          DateTime                @updatedAt
}

model RefreshToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model Patient {
  id             Int       @id @default(autoincrement())
  hn             String    @unique
  firstName      String
  lastName       String
  gender         String
  age            Int?
  phone          String?
  diagnosis      String?
  diagnosisNotes String?
  doctorName     String?
  createdById    Int?
  createdBy      User?     @relation("PatientCreatedBy", fields: [createdById], references: [id])
  bookings       Booking[]
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Booking {
  id                Int        @id @default(autoincrement())
  patientId         Int
  patient           Patient    @relation(fields: [patientId], references: [id])
  requestedById     Int?
  requestedBy       User?      @relation("BookingRequestedBy", fields: [requestedById], references: [id])
  assignedToId      Int?
  assignedTo        User?      @relation("BookingAssignedTo", fields: [assignedToId], references: [id])
  bedType           BedType
  bedNumber         String?
  admitDate         DateTime
  status            BookingStatus @default(PENDING)
  waitingTimeNote   String?
  labPackage        String?
  labCustomNote     String?
  appointmentSource String?
  referHospital     String?
  notes             String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  statusHistory     BookingStatusHistory[]
}

model BookingStatusHistory {
  id         Int            @id @default(autoincrement())
  bookingId  Int
  booking    Booking        @relation(fields: [bookingId], references: [id])
  status     BookingStatus
  changedById Int?
  changedBy   User?         @relation("BookingStatusChangedBy", fields: [changedById], references: [id])
  note       String?
  createdAt  DateTime       @default(now())
}

model BedSnapshot {
  id            Int      @id @default(autoincrement())
  ward          String
  bedNumber     String
  occupancy     BedOccupancyStatus
  recordedAt    DateTime @default(now())
  metadata      Json?
  recordedById  Int?
  recordedBy    User?    @relation("BedSnapshotRecordedBy", fields: [recordedById], references: [id])
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  userId    Int?
  user      User?    @relation(fields: [userId], references: [id])
  action    String
  entity    String
  entityId  String?
  metadata  Json?
  createdAt DateTime @default(now())
}

enum BedType {
  STANDARD
  VIP
}

enum BookingStatus {
  PENDING
  CONFIRMED
  WAITING_TRANSFER
  ADMITTED
  CANCELLED
}

enum BedOccupancyStatus {
  AVAILABLE
  OCCUPIED
  RESERVED
  OUT_OF_SERVICE
}
